---
import { getEntry, render } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const entry = await getEntry('en', 'index');
if (!entry) throw new Error('Missing content: en/index');

const { Content } = await render(entry);
const { title, description, tagline } = entry.data;
---
<Layout
  title={title}
  description={description}
  showJsonLd={true}
>
  <main>
    <header>
      <h1>10dos</h1>
      {tagline && <p class="tagline">{tagline}</p>}
    </header>

    <article class="content">
      <Content />
    </article>

    <section class="cta">
      <p>Install the extension and keep only the 10 tasks that count.</p>
      <a
        href="https://chromewebstore.google.com"
        target="_blank"
        rel="noopener noreferrer"
        class="button"
      >
        Get it from Chrome Web Store
      </a>
    </section>
  </main>
</Layout>

<style>
  main {
    max-width: 42rem;
    margin: 0 auto;
    padding: var(--page-padding-y) var(--page-padding-x) 3rem;
  }

  @media (max-width: 768px) {
    main {
      padding: var(--page-padding-y) var(--page-padding-x) 2rem;
    }
  }

  header {
    margin-bottom: 2.5rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
  }

  h1 {
    font-size: 2.25rem;
    font-weight: 700;
    letter-spacing: -0.04em;
    margin: 0 0 0.35rem 0;
    color: var(--color-text);
  }

  .tagline {
    font-size: 1.125rem;
    font-weight: 500;
    color: var(--color-text-muted);
    margin: 0;
  }

  .content {
    margin-bottom: 2.5rem;
  }

  .content :global(p) {
    margin: 0 0 1.1rem 0;
    color: var(--color-text);
  }

  .content :global(p:last-child) {
    margin-bottom: 0;
  }

  .content :global(h2) {
    font-size: 1.25rem;
    font-weight: 600;
    letter-spacing: -0.02em;
    margin: 2rem 0 0.85rem 0;
    color: var(--color-text);
  }

  .content :global(h2:first-of-type) {
    margin-top: 0;
  }

  .content :global(ul) {
    margin: 0 0 1rem 0;
    padding-left: 1.35rem;
  }

  .content :global(li) {
    margin-bottom: 0.4rem;
  }

  .content :global(a) {
    font-weight: 500;
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .content :global(a:hover) {
    text-decoration-thickness: 2px;
  }

  .cta {
    margin-bottom: 2rem;
    padding: 1.5rem 0;
  }

  .cta p {
    margin: 0 0 1rem 0;
    color: var(--color-text-muted);
    font-size: 0.9375rem;
  }

  .button {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: var(--color-accent);
    color: #fff;
    font-weight: 600;
    font-size: 0.9375rem;
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-sm);
    transition: background var(--transition), box-shadow var(--transition), transform 0.15s ease;
  }

  .button:hover {
    background: var(--color-link-hover);
    box-shadow: var(--shadow-md);
    transform: translateY(-1px);
  }

  @media (max-width: 768px) {
    .button {
      min-height: 44px;
      padding: 0.75rem 1.25rem;
      display: inline-flex;
      align-items: center;
      justify-content: center;
    }
  }
</style>
