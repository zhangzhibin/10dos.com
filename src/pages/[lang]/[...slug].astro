---
import { getCollection, getEntry, render } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const CTA_LABEL: Record<string, string> = {
  ja: 'Chrome ウェブストアで入手',
  zh: '前往 Chrome 网上应用店',
  zhtw: '前往 Chrome 線上應用程式商店',
};

export async function getStaticPaths() {
  const paths: { params: { lang: string; slug?: string }; props: { contentLang: 'ja' | 'zh' | 'zhtw'; slug: string } }[] = [];
  const langConfig: { contentLang: 'ja' | 'zh' | 'zhtw'; urlLang: string }[] = [
    { contentLang: 'ja', urlLang: 'ja' },
    { contentLang: 'zh', urlLang: 'zh' },
    { contentLang: 'zhtw', urlLang: 'zh-tw' },
  ];
  for (const { contentLang, urlLang } of langConfig) {
    const entries = await getCollection(contentLang);
    for (const e of entries) {
      paths.push({
        params: {
          lang: urlLang,
          slug: e.slug === 'index' ? undefined : e.slug,
        },
        props: { contentLang, slug: e.slug },
      });
    }
  }
  return paths;
}

const { contentLang, slug } = Astro.props;
const entry = await getEntry(contentLang, slug);
const pathPrefix = Astro.params.lang === 'ja' ? '/ja' : Astro.params.lang === 'zh' ? '/zh' : '/zh-tw';
if (!entry) return Astro.redirect(`${pathPrefix}/`);

const { Content } = await render(entry);
const { title, description, tagline, ogImage } = entry.data;
const isIndex = slug === 'index';
const isInstall = slug === 'install';
const canonicalPath = isIndex ? `${pathPrefix}/` : `${pathPrefix}/${slug}/`;
---
<Layout
  title={title}
  description={description}
  canonicalPath={canonicalPath}
  ogImage={ogImage}
  showJsonLd={isInstall}
  lang={contentLang}
>
  <main>
    {isIndex && tagline && (
      <header>
        <h1>10dos</h1>
        <p class="tagline">{tagline}</p>
      </header>
    )}
    <article class="content">
      <Content />
    </article>
    {isInstall && (
      <section class="cta">
        <a
          href="https://chromewebstore.google.com/detail/kcphneilcldimkjgfmoiffiklfapcopm"
          target="_blank"
          rel="noopener noreferrer"
          class="button"
        >
          {CTA_LABEL[contentLang]}
        </a>
      </section>
    )}
  </main>
</Layout>

<style>
  main {
    max-width: 42rem;
    margin: 0 auto;
    padding: var(--page-padding-y) var(--page-padding-x) 3rem;
  }

  @media (max-width: 768px) {
    main {
      padding: var(--page-padding-y) var(--page-padding-x) 2rem;
    }
  }

  header {
    margin-bottom: 2.5rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
  }

  h1 {
    font-size: 2.25rem;
    font-weight: 700;
    letter-spacing: -0.04em;
    margin: 0 0 0.35rem 0;
    color: var(--color-text);
  }

  .tagline {
    font-size: 1.125rem;
    font-weight: 500;
    color: var(--color-text-muted);
    margin: 0;
  }

  .content {
    margin-bottom: 2.5rem;
  }

  .content :global(p) {
    margin: 0 0 1.1rem 0;
    color: var(--color-text);
  }

  .content :global(h2) {
    font-size: 1.25rem;
    font-weight: 600;
    letter-spacing: -0.02em;
    margin: 2rem 0 0.85rem 0;
    color: var(--color-text);
  }

  .content :global(h2:first-child) {
    margin-top: 0;
  }

  .content :global(ul) {
    margin: 0 0 1rem 0;
    padding-left: 1.35rem;
  }

  .content :global(li) {
    margin-bottom: 0.4rem;
  }

  .content :global(a) {
    font-weight: 500;
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .cta {
    margin-bottom: 2rem;
    padding: 1.5rem 0;
  }

  .button {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: var(--color-accent);
    color: #fff;
    font-weight: 600;
    font-size: 0.9375rem;
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-sm);
    transition: background var(--transition), box-shadow var(--transition), transform 0.15s ease;
  }

  .button:hover {
    background: var(--color-link-hover);
    box-shadow: var(--shadow-md);
    transform: translateY(-1px);
  }

  @media (max-width: 768px) {
    .button {
      min-height: 44px;
      padding: 0.75rem 1.25rem;
      display: inline-flex;
      align-items: center;
      justify-content: center;
    }
  }
</style>
