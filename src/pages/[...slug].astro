---
import { getCollection, getEntry, render } from 'astro:content';
import Layout from '../layouts/Layout.astro';

export async function getStaticPaths() {
  const entries = await getCollection('en');
  return entries
    .filter((e) => e.slug !== 'index')
    .map((e) => ({
      params: { slug: e.slug },
      props: { slug: e.slug },
    }));
}

const { slug } = Astro.props;
const entry = await getEntry('en', slug);
if (!entry) return Astro.redirect('/404');

const { Content } = await render(entry);
const { title, description, ogImage } = entry.data;
const isInstall = slug === 'install';
---
<Layout
  title={title}
  description={description}
  canonicalPath={`/${slug}`}
  ogImage={ogImage}
  showJsonLd={isInstall}
>
  <main>
    <article class="content">
      <Content />
    </article>
    {isInstall && (
      <section class="cta">
        <a
          href="https://chromewebstore.google.com"
          target="_blank"
          rel="noopener noreferrer"
          class="button"
        >
          Get it from Chrome Web Store
        </a>
      </section>
    )}
  </main>
</Layout>

<style>
  main {
    max-width: 42rem;
    margin: 0 auto;
    padding: var(--page-padding-y) var(--page-padding-x) 3rem;
  }

  @media (max-width: 768px) {
    main {
      padding: var(--page-padding-y) var(--page-padding-x) 2rem;
    }
  }

  .content {
    margin-bottom: 2.5rem;
  }

  .content :global(p) {
    margin: 0 0 1.1rem 0;
    color: var(--color-text);
  }

  .content :global(h2) {
    font-size: 1.25rem;
    font-weight: 600;
    letter-spacing: -0.02em;
    margin: 2rem 0 0.85rem 0;
    color: var(--color-text);
  }

  .content :global(h2:first-child) {
    margin-top: 0;
  }

  .content :global(ul) {
    margin: 0 0 1rem 0;
    padding-left: 1.35rem;
  }

  .content :global(li) {
    margin-bottom: 0.4rem;
  }

  .content :global(a) {
    font-weight: 500;
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .content :global(a:hover) {
    text-decoration-thickness: 2px;
  }

  .cta {
    margin-bottom: 2rem;
    padding: 1.5rem 0;
  }

  .button {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: var(--color-accent);
    color: #fff;
    font-weight: 600;
    font-size: 0.9375rem;
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-sm);
    transition: background var(--transition), box-shadow var(--transition), transform 0.15s ease;
  }

  .button:hover {
    background: var(--color-link-hover);
    box-shadow: var(--shadow-md);
    transform: translateY(-1px);
  }

  @media (max-width: 768px) {
    .button {
      min-height: 44px;
      padding: 0.75rem 1.25rem;
      display: inline-flex;
      align-items: center;
      justify-content: center;
    }
  }
</style>
