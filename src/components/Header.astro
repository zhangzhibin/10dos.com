---
import { navLinks, getNavHref, getNavLabel, type Locale } from './nav.ts';
import LanguageSwitcher from './LanguageSwitcher.astro';

interface Props {
  currentPath?: string;
  lang?: Locale;
}
const { currentPath = Astro.url.pathname, lang = 'en' } = Astro.props;

/** 规范化路径便于比较：去掉末尾斜杠，空为 / */
function norm(path: string) {
  const p = path.replace(/\/$/, '') || '/';
  return p === '' ? '/' : p;
}
const current = norm(currentPath);
const logoHref = getNavHref('/', lang);
---
<header class="site-header">
  <a href={logoHref} class="logo">10dos</a>
  <nav class="nav" aria-label="Main">
    <details class="nav-details" open>
      <summary class="nav-toggle" aria-expanded="false" aria-controls="nav-panel" id="nav-toggle-btn">
        <span class="nav-toggle-icon" aria-hidden="true">
          <span class="nav-toggle-bar"></span>
          <span class="nav-toggle-bar"></span>
          <span class="nav-toggle-bar"></span>
        </span>
        <span class="nav-toggle-text">Menu</span>
      </summary>
      <div class="nav-panel" id="nav-panel" role="region" aria-label="Navigation menu">
        <div class="nav-panel-inner">
          <ul>
            {navLinks.map((item) => {
              const href = getNavHref(item.href, lang);
              const label = getNavLabel(item, lang);
              const isActive = norm(href) === current;
              return (
                <li>
                  <a href={href} class:list={['nav-link', { active: isActive }]}>{label}</a>
                </li>
              );
            })}
          </ul>
          <div class="nav-panel-lang">
            <LanguageSwitcher currentLang={lang} />
          </div>
        </div>
      </div>
    </details>
  </nav>
</header>
<script>
  (function () {
    if (typeof window === 'undefined') return;
    function collapseIfMobile() {
      const details = document.querySelector('.nav-details');
      if (!details) return;
      if (window.matchMedia('(max-width: 768px)').matches) details.removeAttribute('open');
    }
    if (document.readyState === 'loading') document.addEventListener('DOMContentLoaded', collapseIfMobile);
    else collapseIfMobile();

    // 移动端：点击遮罩关闭菜单；菜单展开时禁止页面滑动
    document.addEventListener('DOMContentLoaded', function () {
      const details = document.querySelector('.nav-details');
      const panel = document.getElementById('nav-panel');
      if (!details || !panel) return;
      const mq = () => window.matchMedia('(max-width: 768px)');

      function setBodyScroll(locked: boolean) {
        document.body.style.overflow = locked ? 'hidden' : '';
      }

      details.addEventListener('toggle', function () {
        if (mq().matches && details.hasAttribute('open')) setBodyScroll(true);
        else setBodyScroll(false);
      });

      panel.addEventListener('click', function (e) {
        if (!mq().matches) return;
        if (!(e.target as HTMLElement).closest('.nav-panel-inner')) {
          details.removeAttribute('open');
          setBodyScroll(false);
        }
      });

      window.addEventListener('resize', function () {
        if (!mq().matches) setBodyScroll(false);
      });
    });
  })();
</script>

<style>
  .site-header {
    --header-height: 3.25rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: nowrap;
    gap: 0.75rem;
    background: var(--color-surface);
    border-bottom: 1px solid var(--color-border);
    box-shadow: var(--shadow-sm);
    padding: 1rem var(--page-padding-x, 1.5rem);
    margin-bottom: 0;
    min-width: 0;
  }

  .logo {
    font-weight: 700;
    font-size: 1.25rem;
    letter-spacing: -0.03em;
    color: var(--color-text);
    text-decoration: none;
    transition: color var(--transition);
  }

  .logo:hover {
    color: var(--color-link-hover);
  }

  .nav {
    display: flex;
    align-items: center;
    min-width: 0;
  }

  .nav-details {
    display: flex;
    align-items: center;
  }

  .nav-toggle {
    display: none;
  }

  .nav-toggle-text {
    display: none;
  }

  .nav-panel {
    display: flex;
    align-items: center;
    gap: 0;
  }

  .nav-panel-inner {
    display: flex;
    align-items: center;
    gap: 0;
  }

  .nav-panel ul {
    display: flex;
    flex-wrap: nowrap;
    gap: 0 0.25rem;
    list-style: none;
    margin: 0;
    padding: 0;
    min-width: 0;
  }

  .nav-link {
    display: inline-block;
    padding: 0.4rem 0.75rem;
    color: var(--color-text-muted);
    font-size: 0.9375rem;
    font-weight: 500;
    border-radius: var(--radius-sm);
    transition: color var(--transition), background var(--transition);
  }

  .nav-link:hover {
    color: var(--color-text);
    background: var(--color-bg);
  }

  .nav-link.active {
    color: var(--color-text);
    background: var(--color-bg);
  }

  .nav-panel-lang {
    margin-left: 0;
  }

  /* 桌面端：始终显示导航面板，不受 details 折叠状态影响 */
  @media (min-width: 769px) {
    .nav-details .nav-panel {
      display: flex !important;
    }
  }

  /* 移动端：汉堡图标 + 浮层菜单 */
  @media (max-width: 768px) {
    .site-header {
      padding: 0.75rem var(--page-padding-x);
      --header-height: 3.25rem;
    }

    .nav-details {
      display: block;
    }

    .nav-details[open] {
      /* 不撑开布局，保持与未展开一致 */
    }

    .nav-toggle {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 44px;
      height: 44px;
      padding: 0;
      margin: 0;
      color: var(--color-text-muted);
      background: none;
      border: none;
      border-radius: var(--radius-sm);
      cursor: pointer;
      list-style: none;
      transition: color var(--transition), background var(--transition);
    }

    .nav-toggle::-webkit-details-marker {
      display: none;
    }

    .nav-toggle:hover {
      color: var(--color-text);
      background: var(--color-bg);
    }

    /* 汉堡图标：三条横线 */
    .nav-toggle-icon {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 5px;
      width: 20px;
      height: 20px;
    }

    .nav-toggle-bar {
      display: block;
      width: 18px;
      height: 2px;
      border-radius: 1px;
      background: currentColor;
      transition: transform 0.2s ease, opacity 0.2s ease;
    }

    .nav-details[open] .nav-toggle-bar:nth-child(1) {
      transform: translateY(7px) rotate(45deg);
    }
    .nav-details[open] .nav-toggle-bar:nth-child(2) {
      opacity: 0;
    }
    .nav-details[open] .nav-toggle-bar:nth-child(3) {
      transform: translateY(-7px) rotate(-45deg);
    }

    /* 浮层：固定定位，不撑开布局 */
    .nav-panel {
      display: none;
      position: fixed;
      top: var(--header-height);
      left: 0;
      right: 0;
      bottom: 0;
      z-index: 999;
      background: rgba(0, 0, 0, 0.35);
      padding: 0;
      flex-direction: column;
      align-items: stretch;
      cursor: default;
    }

    .nav-details[open] .nav-panel {
      display: flex;
      cursor: pointer;
    }

    /* 菜单内容区：白底卡片，点击不关闭 */
    .nav-panel > ul,
    .nav-panel > .nav-panel-lang {
      cursor: default;
      pointer-events: auto;
    }

    .nav-panel-inner {
      display: flex;
      flex-direction: column;
      align-items: stretch;
      background: var(--color-surface);
      border-bottom: 1px solid var(--color-border);
      box-shadow: var(--shadow-md);
      padding: 0.5rem 0 1rem;
      margin: 0 var(--page-padding-x, 1.5rem);
      border-radius: 0 0 var(--radius-md) var(--radius-md);
      max-height: calc(100vh - var(--header-height) - 1rem);
      overflow: visible;
      pointer-events: auto;
    }

    .nav-panel-inner > ul {
      overflow-y: auto;
      max-height: calc(100vh - var(--header-height) - 12rem);
    }

    .nav-panel ul {
      flex-direction: column;
      gap: 0;
      padding: 0;
    }

    .nav-panel ul li {
      border-bottom: 1px solid var(--color-border);
    }

    .nav-panel ul li:last-child {
      border-bottom: none;
    }

    .nav-panel .nav-link {
      display: block;
      padding: 0.75rem var(--page-padding-x, 1.5rem);
      font-size: 1rem;
      min-height: 44px;
      align-items: center;
    }

    .nav-panel-lang {
      margin-top: 0.75rem;
      padding: 0.75rem var(--page-padding-x, 1.5rem) 0;
      border-top: 1px solid var(--color-border);
    }
  }
</style>
