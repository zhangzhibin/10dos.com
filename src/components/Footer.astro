---
import { navLinks, getNavHref, getNavLabel, type Locale } from './nav.ts';

interface Props {
  lang?: Locale;
}
const { lang = 'en' } = Astro.props;
---
<footer class="site-footer">
  <nav class="footer-nav" aria-label="Footer">
    <ul>
      {navLinks.map((item) => (
        <li>
          <a href={getNavHref(item.href, lang)}>{getNavLabel(item, lang)}</a>
        </li>
      ))}
    </ul>
  </nav>
  <p class="credit">
    <a href="https://10dos.com">10dos.com</a> â€” minimal todo, clear choices.
  </p>
</footer>

<style>
  .site-footer {
    background: var(--color-surface);
    border-top: 1px solid var(--color-border);
    padding: var(--page-padding-y, 2rem) var(--page-padding-x, 1.5rem);
    margin-top: 3rem;
    font-size: 0.875rem;
    color: var(--color-text-muted);
    text-align: center;
  }

  @media (max-width: 768px) {
    .site-footer {
      margin-top: 2rem;
      padding: 1.5rem var(--page-padding-x);
    }

    .footer-nav ul {
      gap: 0 0.75rem;
      row-gap: 0.25rem;
    }

    .footer-nav a {
      padding: 0.35rem 0;
      min-height: 44px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
    }
  }

  .footer-nav ul {
    display: flex;
    flex-wrap: wrap;
    gap: 0 1.25rem;
    list-style: none;
    margin: 0 0 1rem 0;
    padding: 0;
    justify-content: center;
  }

  .footer-nav a {
    color: var(--color-text-muted);
    font-weight: 500;
    transition: color var(--transition);
  }

  .footer-nav a:hover {
    color: var(--color-text);
  }

  .credit {
    margin: 0;
  }

  .credit a {
    color: var(--color-text);
    font-weight: 500;
  }

  .credit a:hover {
    color: var(--color-link-hover);
  }
</style>
